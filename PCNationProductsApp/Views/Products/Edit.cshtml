@model PCNationProductsApp.Models.Products

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ProductsViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="BrandId" />
            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="ModelYear" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <div>@Model.ProductId</div>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <div>@Model.BrandId</div>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                 <div>@Model.CategoryId</div>
            </div>
            <div class="form-group">
                <label asp-for="ModelYear" class="control-label"></label>
                <div>@Model.ModelYear</div>
            </div>
            <div class="form-group">
                <label asp-for="ListPrice" class="control-label"></label>
                <input asp-for="ListPrice" class="form-control" />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
